const pageTitle = "Budget Goals & Savings";

const headings = [
  { depth: 2, slug: "budget-setup", text: "Setting Up Budgets" },
  { depth: 2, slug: "smart-budgeting", text: "Smart Budgeting Features" },
  { depth: 2, slug: "savings-tracking", text: "Savings Tracking" },
  { depth: 2, slug: "goal-management", text: "Goal Management" },
  { depth: 2, slug: "alerts-notifications", text: "Alerts & Notifications" },
  { depth: 2, slug: "family-budgets", text: "Family Budget Coordination" }
