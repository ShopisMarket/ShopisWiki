const headings = [
  { depth: 2, slug: "history-overview", text: "Purchase History Overview" },
  { depth: 2, slug: "search-filter", text: "Search & Filter Options" },
  { depth: 2, slug: "detailed-records", text: "Detailed Purchase Records" },
  { depth: 2, slug: "receipt-management", text: "Receipt Management" },
  { depth: 2, slug: "reorder-features", text: "Reorder Features" },
  { depth: 2, slug: "data-export", text: "Data Export & Backup" }
