---
import WikiLayout from '../../layouts/WikiLayout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import InfoBox from '../../components/InfoBox.astro';

const pageTitle = "Smart Notifications";

const headings = [
  { depth: 2, slug: "notification-types", text: "Types of Smart Notifications" },
  { depth: 2, slug: "location-based", text: "Location-Based Alerts" },
  { depth: 2, slug: "time-based", text: "Time-Based Reminders" },
  { depth: 2, slug: "deal-alerts", text: "Deal & Price Alerts" },
  { depth: 2, slug: "inventory-notifications", text: "Inventory Notifications" },
  { depth: 2, slug: "customization", text: "Customizing Notifications" },
  { depth: 2, slug: "privacy-settings", text: "Privacy & Settings" }
