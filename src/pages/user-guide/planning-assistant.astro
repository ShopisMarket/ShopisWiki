  { depth: 2, slug: "meal-planning", text: "Meal Planning" },
  { depth: 2, slug: "budget-optimization", text: "Budget Optimization" },
  { depth: 2, slug: "seasonal-suggestions", text: "Seasonal Suggestions" },
  { depth: 2, slug: "inventory-management", text: "Inventory Management" },
