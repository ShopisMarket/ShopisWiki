const headings = [
  { depth: 2, slug: "sharing-basics", text: "Sharing Basics" },
  { depth: 2, slug: "permission-levels", text: "Permission Levels" },
  { depth: 2, slug: "real-time-collaboration", text: "Real-Time Collaboration" },
  { depth: 2, slug: "family-features", text: "Family Features" },
  { depth: 2, slug: "notifications", text: "Sharing Notifications" },
  { depth: 2, slug: "privacy-security", text: "Privacy & Security" },
